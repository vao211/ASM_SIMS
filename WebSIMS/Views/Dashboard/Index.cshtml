@model WebSIMS.Models.ViewModels.DashboardViewModel
<h2>Welcome, @Model.UserName (@Model.Role)</h2>

@if (TempData["Notification"] != null)
{
    <div class="alert alert-success">@TempData["Notification"]</div>
}

<form action="/Authen/Logout" method="post">
    <button type="submit">Logout</button>
</form>

@if (Model.Role == "Admin")
{
    <h3>All Courses</h3>
    @if (Model.Courses != null && Model.Courses.Any())
    {
        <table class="table table-striped mt-4">
            <thead>
            <tr>
                <th>Course Id</th>
                <th>Course Name</th>
                <th>Lecturer</th>
            </tr>
            </thead>
            <tbody>
                @foreach (var course in Model.Courses)
                {
                    <tr>
                        <td>@course.Id</td>
                        <td>@course.Name</td>
                        <td>@course.LecturerName</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="mt-4">No courses found.</p>
    }

    <a href="@Url.Action("CreateCourse", "Admin")">Create New Course</a>
    <a href="@Url.Action("CreateUser", "Admin")">Create New User</a>
    <a href="@Url.Action("AssignStudentToCourse", "Admin")">Assign Student</a>
    <a href="@Url.Action("UserManager", "Admin")" class="btn btn-primary">Manage Users</a>
    <a href="@Url.Action("CourseManager", "Admin")" class="btn btn-primary">Manage Courses</a>
    <a href="@Url.Action("ViewEnrollments", "Admin")">View all enrollments</a>
}
else if (Model.Role == "Lecturer")
{
    <h3>Your Courses</h3>
    @if (Model.Courses != null && Model.Courses.Any())
    {
        <ul>
            @foreach (var course in Model.Courses)
            {
                <li>
                    @course.Name
                    <a href="@Url.Action("ViewCoursesStudents", "Lecturer", new { courseId = course.Id })">View Students</a>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No courses found.</p>
    }
}
else if (Model.Role == "Student")
{
    <h3>Your Enrollments</h3>
    @if (Model.Enrollments != null && Model.Enrollments.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Course</th>
                    <th>Lecturer</th>
                    <th>Grade</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var enrollment in Model.Enrollments)
                {
                    <tr>
                        <td>@enrollment.CourseName</td>
                        <td>@enrollment.LecturerName</td>
                        <td>@(enrollment.Grade.HasValue ? enrollment.Grade.Value.ToString("F2") : "Not Graded")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No enrollments found.</p>
    }
    <a href="@Url.Action("Index", "Student")">View your information</a>
}