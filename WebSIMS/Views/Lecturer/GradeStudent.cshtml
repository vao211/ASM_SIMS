@model WebSIMS.Models.ViewModels.GradeStudentViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Grade Students";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=arrow_back" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=arrow_back" />
    <link rel="stylesheet" href="~/css/lecture-grade-student.css"/>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <div class="d-flex align-items-center">
                <a class="nav-link btn-back me-2" href="@Url.Action("Index", "Dashboard")">
                    <span class="material-symbols-outlined">arrow_back</span>
                </a>
                <a class="navbar-brand" href="#">Grade Students</a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <div class="container">
            <h2>Grade students in Course: @Model.CourseName</h2>

            @if (TempData["Notification"] != null)
            {
                <div class="alert alert-success">@TempData["Notification"]</div>
            }

            <form asp-action="GradeStudent" method="post">
                <input type="hidden" asp-for="CourseId" />
                <input type="hidden" asp-for="CourseName" />
                <table class="table">
                    <thead>
                        <tr>
                            <th>Student</th>
                            <th>Grade</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.StudentsList.Count; i++)
                        {
                            <tr>
                                <td>
                                    @Model.StudentsList[i].Text
                                    <input type="hidden" name="Grades[@i].StudentId" value="@Model.StudentsList[i].Value" />
                                </td>
                                <td>
                                    <input name="Grades[@i].Grade" class="form-control" type="number" step="0.01" min="0" max="10" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="btn-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="ViewCoursesStudents" asp-route-courseId="@Model.CourseId" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>