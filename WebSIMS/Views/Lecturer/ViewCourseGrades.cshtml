@model List<WebSIMS.Models.ViewModels.EnrollmentViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Grade List";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=arrow_back" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=arrow_back" />
    <link rel="stylesheet" href="~/css/lecture-view-grade.css" />
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <div class="d-flex align-items-center">
                <a class="nav-link btn-back me-2" href="@Url.Action("Index", "Dashboard")">
                    <span class="material-symbols-outlined">arrow_back</span>
                </a>
                <a class="navbar-brand" href="#" style="margin-left: 25px;">Grade List</a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <div class="container">
            <h2>Grade list - Course: @ViewBag.CourseName</h2>

            @if (Model.Any())
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Student's Name</th>
                            <th>Grade</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var record in Model)
                        {
                            <tr>
                                <td>@record.StudentName</td>
                                <td>@record.Grade.ToString()</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No grading in this course</p>
            }
            <div class="btn-group">
                <a asp-action="ViewCoursesStudents" asp-route-courseId="@ViewBag.CourseId" class="btn btn-secondary">Back</a>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>