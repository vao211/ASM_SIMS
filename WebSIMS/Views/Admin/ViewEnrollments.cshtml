@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebSIMS.Models.ViewModels.EnrollmentListViewModel
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Manage Enrollments";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=arrow_back" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=arrow_back" />
    <link rel="stylesheet" href="~/css/admin-view-enrollments.css" />
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <div class="d-flex align-items-center">
                <a class="nav-link btn-back" href="@Url.Action("Index", "Dashboard")">
                    <span class="material-symbols-outlined">
                        arrow_back
                    </span>
                </a>
                <a class="navbar-brand" href="#">Manage Enrollments</a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <div class="container">
            <h2>Manage Enrollments</h2>

            <!-- Dropdown to select course -->
            <form asp-action="ViewEnrollments" method="get">
                <div class="form-group mb-3">
                    <label for="CourseId" class="control-label">Select Course:</label>
                    <select asp-for="CourseId" class="form-control" asp-items="@Model.CoursesList" onchange="this.form.submit()">
                        <option value="">-- Select a Course --</option>
                    </select>
                </div>
            </form>

            <!-- Table to display enrollment information -->
            @if (Model.Enrollments != null && Model.Enrollments.Any())
            {
                <table class="table table-striped mt-4">
                    <thead>
                        <tr>
                            <th>Student Name</th>
                            <th>Course Id</th>
                            <th>Course Name</th>
                            <th>Lecturer Name</th>
                            <th>Grade</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var enrollment in Model.Enrollments)
                        {
                            <tr>
                                <td>@enrollment.StudentName</td>
                                <td>@Model.CourseId</td>
                                <td>@enrollment.CourseName</td>
                                <td>@enrollment.LecturerName</td>
                                <td>@(enrollment.Grade.HasValue? enrollment.Grade.Value.ToString("F2") : "Not Graded")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="mt-4">No enrollments found for the selected course (Id: @Model.CourseId).</p>
            }

            <div class="form-group mt-3">
                <a href="@Url.Action("Index", "Dashboard")" class="btn btn-secondary">Back to Dashboard</a>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>