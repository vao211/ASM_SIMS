@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebSIMS.Models.ViewModels.EnrollmentListViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Manage Enrollments";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SIMS - Manage Enrollments</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 font-sans">
    <!-- Header -->
    <header class="bg-blue-700 text-white p-4 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-2xl font-bold">SIMS - Manage Enrollments</h1>
            <nav class="flex items-center space-x-4">
                <a href="@Url.Action("Index", "Dashboard")" class="hover:underline">Dashboard</a>
                <a href="#" class="hover:underline">Profile</a>
                <a href="#" class="hover:underline">Logout</a>
            </nav>
        </div>
    </header>

    <!-- Main Layout -->
    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <aside class="bg-gray-800 text-white w-64 p-4">
            <nav class="space-y-2">
                <a href="@Url.Action("Index", "Dashboard")" class="block p-2 rounded-md hover:bg-gray-700">Dashboard</a>
                <a href="@Url.Action("CourseManager", "Admin")" class="block p-2 rounded-md hover:bg-gray-700">Courses</a>
                <a href="@Url.Action("UserManager", "Admin")" class="block p-2 rounded-md hover:bg-gray-700">Users</a>
                <a href="#" class="block p-2 rounded-md hover:bg-gray-700 bg-gray-900">Enrollments</a>
                <a href="#" class="block p-2 rounded-md hover:bg-gray-700">Settings</a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 p-6">
            <div class="bg-white p-6 rounded-lg shadow-md max-w-4xl mx-auto">
                <h2 class="text-2xl font-semibold mb-6 text-gray-800">Manage Enrollments</h2>

                <!-- Course Selection Form -->
                <form asp-action="ViewEnrollments" method="get" class="mb-6">
                    <div class="form-group">
                        <label for="CourseId" class="block text-sm font-medium text-gray-700 mb-1">Select Course</label>
                        <select asp-for="CourseId" class="w-full p-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" asp-items="@Model.CoursesList" onchange="this.form.submit()">
                            <option value="">-- Select a Course --</option>
                        </select>
                    </div>
                </form>

                <!-- Enrollment Table -->
                @if (Model.Enrollments != null && Model.Enrollments.Any())
                {
                    <table class="w-full border-collapse mt-4 bg-gray-50 rounded-md">
                        <thead>
                            <tr class="bg-gray-200">
                                <th class="p-3 text-left text-sm font-medium text-gray-700">Student Name</th>
                                <th class="p-3 text-left text-sm font-medium text-gray-700">Course ID</th>
                                <th class="p-3 text-left text-sm font-medium text-gray-700">Course Name</th>
                                <th class="p-3 text-left text-sm font-medium text-gray-700">Lecturer Name</th>
                                <th class="p-3 text-left text-sm font-medium text-gray-700">Grade</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var enrollment in Model.Enrollments)
                            {
                                <tr class="hover:bg-gray-100">
                                    <td class="p-3 border-t">@enrollment.StudentName</td>
                                    <td class="p-3 border-t">@Model.CourseId</td>
                                    <td class="p-3 border-t">@enrollment.CourseName</td>
                                    <td class="p-3 border-t">@enrollment.LecturerName</td>
                                    <td class="p-3 border-t">@(enrollment.Grade.HasValue ? enrollment.Grade.Value.ToString("F2") : "Not Graded")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="mt-6 text-gray-600">No enrollments found for the selected course (Id: @Model.CourseId).</p>
                }

                <a href="@Url.Action("Index", "Dashboard")" class="inline-block mt-6 px-4 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400">Back to Dashboard</a>
            </div>
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white p-4 text-center">
        <p>&copy; 2025 SIMS. All rights reserved.</p>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>