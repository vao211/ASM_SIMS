@model WebSIMS.Models.ViewModels.CreateCourseViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit Course";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SIMS - Edit Course</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 font-sans">
    <!-- Header -->
    <header class="bg-blue-700 text-white p-4 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-2xl font-bold">SIMS - Edit Course</h1>
            <nav class="flex items-center space-x-4">
                <a href="@Url.Action("Index", "Dashboard")" class="hover:underline">Dashboard</a>
                <a href="#" class="hover:underline">Profile</a>
                <a href="#" class="hover:underline">Logout</a>
            </nav>
        </div>
    </header>

    <!-- Main Layout -->
    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <aside class="bg-gray-800 text-white w-64 p-4">
            <nav class="space-y-2">
                <a href="@Url.Action("Index", "Dashboard")" class="block p-2 rounded-md hover:bg-gray-700">Dashboard</a>
                <a href="@Url.Action("CourseManager", "Admin")" class="block p-2 rounded-md hover:bg-gray-700 bg-gray-900">Courses</a>
                <a href="#" class="block p-2 rounded-md hover:bg-gray-700">Users</a>
                <a href="#" class="block p-2 rounded-md hover:bg-gray-700">Settings</a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 p-6">
            <div class="bg-white p-6 rounded-lg shadow-md max-w-2xl mx-auto">
                <h2 class="text-2xl font-semibold mb-6 text-gray-800">Edit Course</h2>

                <!-- Notifications -->
                @if (ViewData.ModelState.Any(x => x.Key == ""))
                {
                    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded-md alert alert-danger">
                        @foreach (var error in ViewData.ModelState[""].Errors)
                        {
                            <p>@error.ErrorMessage</p>
                        }
                    </div>
                }

                <!-- Form -->
                <form asp-action="EditCourse" method="post" class="space-y-6">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1">Course Name</label>
                        <input asp-for="Name" class="w-full p-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                        <span asp-validation-for="Name" class="text-red-500 text-sm mt-1"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LecturerId" class="block text-sm font-medium text-gray-700 mb-1">Lecturer</label>
                        <select asp-for="LecturerId" class="w-full p-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" asp-items="@Model.lecturersList">
                            <option value="">-- Select a Lecturer --</option>
                        </select>
                        <span asp-validation-for="LecturerId" class="text-red-500 text-sm mt-1"></span>
                    </div>
                    <div class="flex justify-end space-x-4">
                        <a href="@Url.Action("CourseManager", "Admin")" class="px-4 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400">Cancel</a>
                        <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600">Save Changes</button>
                    </div>
                </form>
            </div>
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white p-4 text-center">
        <p>&copy; 2025 SIMS. All rights reserved.</p>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>