@model WebSIMS.Models.ViewModels.StudentViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Student Information";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=arrow_back" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=arrow_back" />
    <link rel="stylesheet" href="~/css/lecture-student-info.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <div class="d-flex align-items-center">
                <a class="nav-link btn-back me-2" href="@Url.Action("Index", "Dashboard")">
                    <span class="material-symbols-outlined">arrow_back</span>
                </a>
                <a class="navbar-brand" href="#" style="margin-left: 25px;">Student Information</a>
            </div>
        </div>
    </nav>
    
    <div class="main-content">
        <div class="container">
            <h2>Student Information</h2>
            <h3>Name: @Model.Name</h3>
            <p><strong>Email:</strong> @Model.Email</p>
            
            <h4>Student Details</h4>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Join Date</th>
                        <th>Birth Date</th>
                        <th>Student ID</th>
                        <th>Phone Number</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@(Model.StudentInfoName ?? "Not Assigned")</td>
                        <td>@(Model.JoinDate.HasValue ? Model.JoinDate.Value.ToString("yyyy-MM-dd") : "Not Assigned")</td>
                        <td>@(Model.BirthDate.HasValue ? Model.BirthDate.Value.ToString("yyyy-MM-dd") : "Not Assigned")</td>
                        <td>@(Model.StudentId ?? "Not Assigned")</td>
                        <td>@(Model.PhoneNumber ?? "Not Assigned")</td>
                    </tr>
                </tbody>
            </table>
            
            <h4>Your Academic Records</h4>
            @if (Model.Enrollments != null && Model.Enrollments.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Course</th>
                            <th>Lecturer</th>
                            <th>Grade</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var enrollment in Model.Enrollments)
                        {
                            <tr>
                                <td>@enrollment.CourseName</td>
                                <td>@enrollment.LecturerName</td>
                                <td>@(enrollment.Grade.HasValue ? enrollment.Grade.Value.ToString("F2") : "Not Graded")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No enrollments found.</p>
            }
            <div class="btn-group">
                <a href="@Url.Action("UserManager", "Admin")" class="btn btn-primary">Back to Dashboard</a>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>