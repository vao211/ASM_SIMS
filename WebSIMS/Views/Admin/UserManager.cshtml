@model List<WebSIMS.Models.ViewModels.CreateUserViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "User Manager";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SIMS - User Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 font-sans">
    <!-- Header -->
    <header class="bg-blue-700 text-white p-4 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-2xl font-bold">SIMS - User Manager</h1>
            <nav class="flex items-center space-x-4">
                <a href="@Url.Action("Index", "Dashboard")" class="hover:underline">Dashboard</a>
                <a href="#" class="hover:underline">Profile</a>
                <a href="#" class="hover:underline">Logout</a>
            </nav>
        </div>
    </header>

    <!-- Main Layout -->
    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <aside class="bg-gray-800 text-white w-64 p-4">
            <nav class="space-y-2">
                <a href="@Url.Action("Index", "Dashboard")" class="block p-2 rounded-md hover:bg-gray-700">Dashboard</a>
                <a href="@Url.Action("CourseManager", "Admin")" class="block p-2 rounded-md hover:bg-gray-700">Courses</a>
                <a href="@Url.Action("UserManager", "Admin")" class="block p-2 rounded-md hover:bg-gray-700 bg-gray-900">Users</a>
                <a href="#" class="block p-2 rounded-md hover:bg-gray-700">Settings</a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 p-6">
            <div class="bg-white p-6 rounded-lg shadow-md max-w-4xl mx-auto">
                <h2 class="text-2xl font-semibold mb-6 text-gray-800">User Manager</h2>

                <!-- Notifications -->
                @if (TempData["Error"] != null)
                {
                    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded-md">
                        @TempData["Error"]
                    </div>
                }
                @if (TempData["Notification"] != null)
                {
                    <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded-md">
                        @TempData["Notification"]
                    </div>
                }

                <!-- User Table -->
                @if (Model != null && Model.Any())
                {
                    <table class="w-full border-collapse mt-4 bg-gray-50 rounded-md">
                        <thead>
                            <tr class="bg-gray-200">
                                <th class="p-3 text-left text-sm font-medium text-gray-700">Name</th>
                                <th class="p-3 text-left text-sm font-medium text-gray-700">Email</th>
                                <th class="p-3 text-left text-sm font-medium text-gray-700">Role</th>
                                <th class="p-3 text-left text-sm font-medium text-gray-700">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr class="hover:bg-gray-100">
                                    <td class="p-3 border-t">
                                        @if (user.Role == "Student")
                                        {
                                            <a href="@Url.Action("ViewStudent", "Admin", new { id = user.Id })" class="text-blue-500 hover:underline">@user.Name</a>
                                        }
                                        else
                                        {
                                            @user.Name
                                        }
                                    </td>
                                    <td class="p-3 border-t">@user.Email</td>
                                    <td class="p-3 border-t">@user.Role</td>
                                    <td class="p-3 border-t">
                                        <a href="@Url.Action("EditUser", "Admin", new { id = user.Id })" class="px-3 py-1 bg-blue-500 text-white rounded-md hover:bg-blue-600 text-sm mr-2">Edit</a>
                                        <form asp-action="DeleteUser" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                            <input type="hidden" name="id" value="@user.Id" />
                                            <button type="submit" class="px-3 py-1 bg-red-500 text-white rounded-md hover:bg-red-600 text-sm">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="mt-6 text-gray-600">No users found.</p>
                }

                <a href="@Url.Action("Index", "Dashboard")" class="inline-block mt-6 px-4 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400">Back to Dashboard</a>
            </div>
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white p-4 text-center">
        <p>&copy; 2025 SIMS. All rights reserved.</p>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>