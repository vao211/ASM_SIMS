@model List<WebSIMS.Models.ViewModels.CreateUserViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "User Manager";
}

<h2>User Manager</h2>

<div class="container">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Notification"] != null)
    {
        <div class="alert alert-success">@TempData["Notification"]</div>
    }

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            @if (user.Role == "Student")
                            {
                                <a href="@Url.Action("ViewStudent", "Admin", new { id = user.Id })">@user.Name</a>
                            }
                            else
                            {
                                @user.Name
                            }
                        </td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td>
                            <a href="@Url.Action("EditUser", "Admin", new { id = user.Id })" class="btn btn-primary btn-sm">Edit</a>
                            <form asp-action="DeleteUser" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="mt-4">No users found.</p>
    }

    <a href="@Url.Action("Index", "Dashboard")" class="btn btn-secondary">Back to Dashboard</a>
</div>