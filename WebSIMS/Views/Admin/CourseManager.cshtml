@model WebSIMS.Models.ViewModels.CourseManagerViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Course Manager";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=arrow_back" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=arrow_back" />
    <link rel="stylesheet" href="~/css/admin-manage-course.css" />
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <div class="d-flex align-items-center">
                <a class="nav-link btn-back" href="@Url.Action("Index", "Dashboard")">
                    <span class="material-symbols-outlined">
                        arrow_back
                    </span>
                </a>
                <a class="navbar-brand" href="#">Course Manager</a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <div class="container">
            <h2>Course Manager</h2>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Notification"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Notification"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (Model.Courses != null && Model.Courses.Any())
            {
                foreach (var course in Model.Courses)
                {
                    <h3>@course.Name</h3>
                    <p><strong>Lecturer:</strong> @course.LecturerName</p>

                    @if (course.Students != null && course.Students.Any())
                    {
                        <table class="table table-striped mt-2">
                            <thead>
                                <tr>
                                    <th>Student ID</th>
                                    <th>Student Name</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var student in course.Students)
                                {
                                    <tr>
                                        <td>@student.Id</td>
                                        <td>@student.Name</td>
                                        <td>
                                            <form asp-action="RemoveStudentFromCourse" method="post" style="display:inline;"
                                                  onsubmit="return confirm('Are you sure you want to remove this student from the course?');">
                                                <input type="hidden" name="studentId" value="@student.Id" />
                                                <input type="hidden" name="courseId" value="@course.Id" />
                                                <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="mt-2">No students enrolled in this course.</p>
                    }

                    <div class="form-group mb-3">
                        <a href="@Url.Action("EditCourse", "Admin", new { id = course.Id })" class="btn btn-primary btn-sm">Edit Course</a>
                        <form asp-action="DeleteCourse" method="post" style="display:inline;"
                              onsubmit="return confirm('Are you sure you want to delete this course?');">
                            <input type="hidden" name="id" value="@course.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete Course</button>
                        </form>
                    </div>
                }
            }
            else
            {
                <p class="mt-4">No courses found.</p>
            }

            <div class="form-group mt-3">
                <a href="@Url.Action("Index", "Dashboard")" class="btn btn-secondary">Back to Dashboard</a>
            </div>
            <div class="form-group mb-3" style="margin-top: 15px">
                <a href="@Url.Action("UserManager", "Admin")" class="btn btn-secondary">Back to User Manager</a>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>